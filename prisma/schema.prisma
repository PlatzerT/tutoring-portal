datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Contact {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  createdAt DateTime  @default(now())
  files     File[]
  subjects  Subject[]
}

model File {
  id        Int     @id @default(autoincrement())
  contact   Contact @relation(references: [id], fields: [contactId])
  contactId Int
  subject   String
  imagePath String
}

model Subject {
  id           Int       @id @default(autoincrement())
  abbreviation String    @unique
  fullName     String    @unique
  contacts     Contact[]
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  body      String
  imagePath String
  createdAt DateTime @default(now())
}
